datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  name      String
  role      UserRole @default(USER)
  campusId  String?
  campus    Campus?  @relation(fields: [campusId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  myTickets       Ticket[] @relation("CreatorTickets")
  assignedTickets Ticket[] @relation("AdminTickets")

  @@index([clerkId])
  @@index([campusId])
  @@map("users")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  MANAGER
  USER
}

enum CampusType {
  COLLEGE
  HOSPITAL
  CORPORATE
  RESIDENTIAL
  SCHOOL
}

enum CampusStatus {
  PENDING
  ACTIVE
  REJECTED
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

model Ticket {
  id          String         @id @default(cuid())
  title       String
  description String
  category    String?
  priority    TicketPriority @default(MEDIUM)
  status      TicketStatus   @default(OPEN)
  location    String
  imageUrl    String?
  creatorId   String
  creator     User           @relation("CreatorTickets", fields: [creatorId], references: [id])
  assignedTo  String?
  admin       User?          @relation("AdminTickets", fields: [assignedTo], references: [id])
  campusId    String
  campus      Campus         @relation(fields: [campusId], references: [id])
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([status])
  @@index([priority])
  @@index([campusId])
  @@map("tickets")
}

model Asset {
  id              String   @id @default(cuid())
  name            String
  type            String
  location        String
  lastMaintenance DateTime @default(now())
  failureRisk     Float    @default(0.0) // 0.0 to 1.0
  campusId        String
  campus          Campus   @relation(fields: [campusId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([campusId])
  @@map("assets")
}

model Campus {
  id           String       @id @default(cuid())
  name         String
  type         CampusType
  contactEmail String?
  status       CampusStatus @default(PENDING) // Super Admin must approve
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  users   User[]
  tickets Ticket[]
  assets  Asset[]

  @@map("campuses")
}
